extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Email:  #{user.email}
								li First Name: #{user.firstName}
								li Last Name: #{user.lastName}
						a(href='/chat', class='text-center new-account') Start chat
						a(href='/user/find', class='text-center new-account') Find user
						a(href='/signout', class='text-center new-account') Sign Out

						div
							form#message-form(action='/user/find', method='POST')
								input(name="user_email", type="text", placeholder="User email", autofocus autocomplete="off")
								button Send
							if users_found
								ul
									each u in users_found
										li #{u.firstName} #{u.lastName} #{u.email}
							else
								p
